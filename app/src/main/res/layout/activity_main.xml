<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="shake.sstudio.com.shake.MainActivity">

    <SeekBar
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="128dp"
        android:id="@+id/seekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Touch to change value"
        android:id="@+id/tv"
        android:layout_above="@+id/seekBar"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/radioGroup"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:text="You suck"
            android:layout_width="match_parent"
            android:id="@+id/radioButton"
            android:layout_height="wrap_content"

            android:layout_below="@+id/radioGroup"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:layout_marginTop="12dp" />

        <RadioButton
        android:text="ha ha ha"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/radioButton2"
        />

        <RadioButton
        android:text="shut up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton3"
        />

        <RadioButton
            android:text="My track"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton4"

            />

    </RadioGroup>

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/textView"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_below="@+id/radioGroup"
        android:layout_alignLeft="@+id/tv"
        android:layout_alignStart="@+id/tv" />

    <ToggleButton
        android:text="ToggleButton"
        android:textOff=""
        android:textOn=""
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/toggleButton"
        android:background="@drawable/selector"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button"
        android:background="@drawable/rec_off"
        android:ellipsize="middle"
        android:fadingEdge="horizontal|vertical"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:text="Run in background?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/toggleButton"
        android:layout_toStartOf="@+id/toggleButton"
        android:paddingEnd="10dp" />


</RelativeLayout>
